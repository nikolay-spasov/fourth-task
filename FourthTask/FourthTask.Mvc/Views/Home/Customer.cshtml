@model string

@{
    ViewBag.Title = "Customer";
}

<div id="app" class="row">
    <input id="customerId" type="hidden" value="@Model" />
    <div class="col-sm-4">
        <ul class="list-group">
            <li class="list-group-item" contenteditable="false">
                <div class="row">
                    <img src="~/Content/Images/user-icon.png" class="col-sm-3 img-responsive" />
                </div>
                <span class="text-primary">{{customer.ContactName}}</span>
            </li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">Company Name</strong></span>{{ customer.CompanyName }}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">Contact Title</strong></span>{{ customer.ContactTitle }}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">Address</strong></span>{{ customer.Address }}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">City</strong></span>{{ customer.City }}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">Region</strong></span>{{ customer.Region | emptyString }}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">Postal Code</strong></span>{{ customer.PostalCode }}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">Country</strong></span>{{ customer.Country }}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">Phone</strong></span>{{ customer.Phone }}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">Fax</strong></span>{{ customer.Fax | emptyString }}</li>
        </ul>
    </div>
    <div class="row">
        <table class="table table-hover table-striped table-responsive table-bordered">
            <thead>
                <tr>
                    <th>Order Date</th>
                    <th>Required Date</th>
                    <th>Shipped Date</th>
                    <th>Ship Name</th>
                    <th>Ship Address</th>
                    <th>Ship City</th>
                    <th>Ship Country</th>
                    <th>Ship Region</th>
                    <th>Ship Postal Code</th>
                    <th>Products</th>
                    <th>Freight</th>
                    <th>Total</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="order in orders">
                    <td>{{ order.OrderDate | formatDate }}</td>
                    <td>{{ order.RequiredDate | formatDate }}</td>
                    <td>{{ order.ShippedDate | formatDate }}</td>
                    <td>{{ order.ShipName }}</td>
                    <td>{{ order.ShipAddress }}</td>
                    <td>{{ order.ShipCity }}</td>
                    <td>{{ order.ShipCountry }}</td>
                    <td>{{ order.ShipRegion }}</td>
                    <td>{{ order.ShipPostalCode }}</td>
                    <td>{{ order.ProductsCount }}</td>
                    <td>${{ order.Freight }}</td>
                    <td>${{ order.Total }}</td>
                    <td>
                        <div class="text-warning" v-bind:class="{ 'hidden': !order.ContainsDiscontinuedProduct }">This order contains discontinued products!</div>
                        <div class="text-danger" v-bind:class="{ 'hidden': !order.UnitsInStockAreLessThanOrdered }">Not enough units in stock!</div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/customer-details.js"></script>
}
